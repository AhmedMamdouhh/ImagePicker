<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <!-- CardView styles. -->
    <style name="CardView.FilledBox" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorOnPrimary</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="strokeWidth">0.5dp</item>
    </style>

    <!-- Search view style -->
    <style name="SearchView.Default" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@null</item>
        <item name="fontFamily">@font/convergence</item>
        <item name="iconifiedByDefault">false</item>
        <item name="queryBackground">@null</item>
        <item name="searchIcon">@drawable/ic_search</item>
    </style>


    <!-- Chip styles. -->
    <style name="ChipTextStyle">
        <item name="android:textSize">@dimen/dp12h</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

</resources>